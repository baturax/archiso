},

"niri/workspaces": {
"format": "{icon}",
"format-icons": {
    "active": "ÔÜí",
  	"default": "ÔÑë"
	}
},

"clock": {
        "format": "{:%H:%M} Û∞•î ",
        "format-alt": "{:%A, %B %d, %Y (%R)} ÔÅ≥ ",
